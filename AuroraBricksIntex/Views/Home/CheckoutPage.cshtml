@model AuroraBricksIntex.Models.Order

<!DOCTYPE html>
<html>
<head>
    <title>Confirmation Page</title>
</head>
<body>
    <h2>Confirmation Page</h2>

    <form method="post">
        <div>
            <label for="date">Date:</label>
            <input type="date" id="date" name="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" readonly />
        </div>
        <div>
            <label for="dayOfWeek">Day of Week:</label>
            <input type="text" id="dayOfWeek" name="dayOfWeek" value="@DateTime.Now.DayOfWeek.ToString()" readonly />
        </div>
        <div>
            <label for="time">Time:</label>
            <input type="time" id="time" name="time" value="@DateTime.Now.ToString("HH:mm")" readonly />
        </div>
        <div>
            <label for="entryMode">Entry Mode:</label>
            <select id="entryMode" name="entryMode">
                <option value="Tap">Tap</option>
                <option value="PIN">PIN</option>
                <option value="CVC">CVC</option>
            </select>
        </div>
        <div>
            <label for="amount">Amount:</label>
            <input type="number" id="amount" name="amount" />
        </div>
        <div>
            <label for="typeOfTransaction">Type of Transaction:</label>
            <input type="text" id="typeOfTransaction" name="typeOfTransaction" value="Online" readonly />
        </div>
        <div>
            <label for="countryOfTransaction">Country of Transaction:</label>
            <select id="countryOfTransaction" name="countryOfTransaction">
                <option value="UK">UK</option>
                <option value="USA">USA</option>
                <option value="India">India</option>
                <option value="China">China</option>
                <option value="Russia">Russia</option>
            </select>
        </div>
        <div>
            <label for="shippingAddress">Shipping Address:</label>
            <textarea id="shippingAddress" name="shippingAddress"></textarea>
        </div>
        <div>
            <label for="bank">Bank:</label>
            <select id="bank" name="bank">
                <option value="Barclays">Barclays</option>
                <option value="HSBC">HSBC</option>
                <option value="Metro">Metro</option>
            </select>
        </div>
        <div>
            <label for="typeOfCard">Type of Card:</label>
            <select id="typeOfCard" name="typeOfCard">
                <option value="Visa">Visa</option>
                <option value="MasterCard">MasterCard</option>
            </select>
        </div>
        <button type="submit">Submit</button>
    </form>

</body>
</html>
