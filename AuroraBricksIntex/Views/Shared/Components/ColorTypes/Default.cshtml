@{
}
@model IQueryable<string>

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="colorDropdown" data-bs-toggle="dropdown" aria-expanded="false">
        Filter By Color
    </button>
    <ul class="dropdown-menu" aria-labelledby="colorDropdown">
        <li>
            <a class="btn dropdown-item @(null == ViewBag.SelectedColorType? "btn-primary" : "btn-outline-secondary" )" asp-controller="Home" asp-action="Index" asp-route-colorType="" asp-route-pageNum="">All Colors</a>
        </li>
        @foreach (string col in Model ?? Enumerable.Empty<string>())
        {
            <li>
                    <a class="btn dropdown-item @(col == ViewBag.SelectedColorType? "btn-primary" : "btn-outline-secondary")" asp-controller="Home" asp-action="Index" asp-route-colorType="@col" asp-route-pageNum="1">@col</a>
            </li>
        }
    </ul>
</div>
